<!DOCTYPE html>
<link rel="stylesheet" href="../public/css/main_community.css"/>
<html>
    <title>
        Byte | {{community.community}}
    </title>
    <body>
        <div class="homecontainer">
            <div class = "webheader">
                <div class = "headercontent">
                    <div class="headerhome">
                        <div class="websitelogo">
                            <a href="../mainpage_logged"><img src="/public/img/byte_logo.png"/></a>
                            <span class = "link"> <a style = "color: beige; text-decoration: none" href = "../mainpage_logged"> byte. </a> </span>
                        </div>
                    </div>
                    <div class="headersearchbar">
                        <input type="search" class="searchbar" placeholder="Search byte" />
                    </div>
                    <div class="headerprofile">
                        <div class="profile">
                            <div class="profileicon">
                                <div class="profileiconholder">
                                    <a href="{{user.userprofilelink}}">
                                    <img src="{{user.pfplink}}"/>
                                    </a>
                                </div>
                            </div>
                            <div class="profilecontainer">
                                <div class="profiledisplayname">
                                    <span>{{user.username}}</span>
                                </div>
                                <div class="profilehandlename">
                                    <span>{{user.userhandle}}</span>
                                </div>
                            </div>
                        </div>

                        <div class="topbuttons">
                            <a href="/mainpage"> Log out </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="communitybanner">
            </div>

            <div class="communityiconinfo">
                <div class="communityicon">
                    <img src="{{currentCommunity.communityicon}}"/>
                </div>
                <div class="communityname">
                    <div class="communitydisplaynamecontainer">
                        <div class="communitydisplayname">
                            <span>{{currentCommunity.communitydisplayname}}</span>
                        </div>
                        <div class="communityhandle">
                            <span>{{currentCommunity.community}}</span>
                        </div>
                    </div>
                    <div class="commuinitybuttons">
                        <button type="button">Follow</button>
                    </div>
                    <div class="communitystats">
                        <div class="totalmembers">
                            <div class="totalcounternumber">
                                <span>{{shortenVotes currentCommunity.totalmembers}}</span>
                            </div>
                            <div class="totalcountertext">
                                <span>Total Members</span>
                            </div>
                        </div>
                        <div class="onlinemembers">
                            <div class="onlinecounternumber">
                                <span> {{shortenVotes currentCommunity.onlinemembers}}</span>
                            </div>
                            <div class="onlinecountertext">
                                <span>Online Members</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="createpost">
                <div class="createposticon">
                    <div class="createpostusericonholder">
                        <img src="{{user.pfplink}}"/>
                    </div>
                </div>
                <div class="createposttext">
                    <input type="search" class="posttext" placeholder="Create Post" onclick="redirectToAnotherPage()"/>
                </div>
                <div class="createpostpic">
                    <a href="/Create_Post">
                    <img src="/public/img/image-alt-regular-24.png"/>
                    </a>
                </div>
                <div class="createpostattach">
                    <a href="/Create_Post">
                    <img src="/public/img/folder-plus-regular-24.png"/>
                    </a>
                </div>
            </div>
            <div class="navigation">
                <div class="communities">
                    <div class="dropdown">
                        <button class="dropbtn">{{currentCommunity.community}}
                          <i class="fa fa-caret-down"></i>
                        </button>
                        <div class="dropdown-content">
                          <a href="#">Link 1</a>
                          <a href="#">Link 2</a>
                          <a href="#">Link 3</a>
                        </div>
                    </div>
                </div>
                <div class="newposts">
                    <a href="./main.html">
                    <img src="/public/img/badge-regular-24.png">
                    </a>
                </div>
                <div class="hotposts">
                    <a href="./main.html">
                    <img src="/public/img/hot-solid-24.png">
                    </a>
                </div>
            </div>
            {{#each posts}}
                {{> postview this}}
            {{/each}}
        </div>
    </body>
</html>