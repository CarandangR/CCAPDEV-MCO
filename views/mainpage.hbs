<!DOCTYPE html>
<link rel="stylesheet" href="/public/css/main.css"/>
<!--<script src="main.js"></script>-->
<html>
    <title>
        Byte | Home
    </title>
    <body>
        <div class="homecontainer">
            <div class = "webheader">
                <div class = "headercontent">
                    <div class="headerhome">
                        <div class="websitelogo">
                            <a href="/main.html"><img src="/public/img/byte_logo.png"/></a>
                            <span class = "link"> <a style = "color: beige; text-decoration: none" href = "./main.html"> byte. </a> </span>
                        </div>
                    </div>
                    <div class="headersearchbar">
                        <input type="search" class="searchbar" placeholder="Search byte"/>
                    </div>
                    <div class="headerprofile">

                        <div class="topbuttons">
                            <a href="./Sign_up"> Signup </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="createpost">
                <div class="createposticon">
                    <div class="createpostusericonholder">
                    </div>
                </div>
                <div class="createposttext">
                    <input type="search" class="posttext" placeholder="Create Post" onclick="redirectToAnotherPage()"/>
                </div>
                <div class="createpostpic">
                    <a href="./Sign_up.html">
                    <img src="/public/img/image-alt-regular-24.png"/>
                    </a>
                </div>
                <div class="createpostattach">
                    <a href="./Sign_up.html">
                    <img src="/public/img/folder-plus-regular-24.png"/>
                    </a>
                </div>
            </div>
            <div class="navigation">
                <div class="communities">
                    <div class="dropdown">
                        <button class="dropbtn">Communities
                          <i class="fa fa-caret-down"></i>
                        </button>
                        <div class="dropdown-content">
                          <a href="./main_community.html">r/apple</a>
                          <a href="#">Link 2</a>
                          <a href="#">Link 3</a>
                        </div>
                    </div>
                </div>
                <div class="newposts">
                    <a href="./Sign_up.html">
                    <img src="/public/img/badge-regular-24.png">
                    </a>
                </div>
                <div class="hotposts">
                    <a href="./Sign_up.html">
                    <img src="/public/img/hot-solid-24.png">
                    </a>
                </div>
            </div>
            <div class="postscontainer">
                <div class="postheader">
                    <div class="communityposticonholder">
                        <div class="communityposticon">
                            <img src="/public/img/apple_logo.jpg"/>
                        </div>
                    </div>
                    <div class="userpostname">
                        <span class="postedon"><a href="./main_community.html">b/apple</a></span>
                        <span>Â·</span>
                        <span>Posted by</span>
                        <span class="postedby"><a href="./profilepage2.html">u/gojo1234</a></span>
                        <span class="postdate">8 days ago</span>
                    </div>
                </div>
                <div class="posttitleheader">
                    <span><h3><a href="./samplepost2.html">Apple just dropped the new iPhone 16!!!</a></h3></span>
                </div>
                <div class="posttextcontent">
                    <span>it good :D</span>
                </div>
                <div class="postpicturecontent">
                    <img src="/public/img/gojowithiphone1.png"/>
                </div>
                <div class="postfooter">
                    <div class="upbit">
                        <img src="/public/img/up-arrow-regular-24.png"/>
                    </div>
                    <div class="downbit">
                        <img src="/public/img/down-arrow-regular-24.png"/>
                    </div>
                    <div class="comment">
                        <img src="/public/img/comment-regular-24.png"/>
                    </div>
                    <div class="share">
                        <img src="/public/img/share-regular-24.png"/>
                    </div>
                    <div class="commentcounter">
                        <span><a href="./samplepost2.html">0 replies</a></span>
                    </div>
                </div>
            </div>
            {{#each posts}}
                {{> postview this}}
            {{/each}}
        </div>
    </body>
</html>
