<!DOCTYPE HTML>
<html>
<head>
    <title> {{returnedPost.postheader}} </title>
    <link rel="stylesheet" type="text/css" href="/static/css/viewpost.css" />
</head>

<body>
    <div class="homecontainer">
        <div class = "webheader">
            <div class = "headercontent">
                <div class="headerhome">
                    <div class="websitelogo">
                        <a href="../mainpage"><img src="/static/img/byte_logo.png"/></a>
                        <span class = "link"> <a style = "color: beige; text-decoration: none" href = "../mainpage"> byte. </a> </span>
                    </div>
                </div>
                <div class="headersearchbar">
                    <input type="search" class="searchbar" placeholder="Search byte"/>
                </div>
                <div class="headerprofile">
                    <div class="profile">
                        <div class="profileicon">
                            <div class="profileiconholder">
                                <a href="{{currentUser.userprofilelink}}">
                                <img src="{{currentUser.pfplink}}"/>
                                </a>
                            </div>
                        </div>
                        <div class="profilecontainer">
                            <div class="profiledisplayname">
                                <span>{{currentUser.username}}</span>
                            </div>
                            <div class="profilehandlename">
                                <span>{{currentUser.userhandle}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="topbuttons">
                        <a href="/mainpage"> Log out </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="mainpage"> 
            <div class="postcontainer">
                <div class="userinfo">
                    <div class="postcommunity"> 
                        <h5> {{correctPost.community}} </h5>
                    </div>
                    <div class ="userpfp">
                        <a href="{{correctPost.user.userprofilelink}}"> <img class="userimg" src="{{correctPost.user.pfplink}}"> </a>
                    </div>
                <div class="postuserinfo"> 
                    <p> {{correctPost.user.username}} <br><span>{{correctPost.user.userhandle}}</span><br> Bits: {{correctPost.user.bits}}</p>
                </div>
                <div class="postdate"> 
                    <h5> Posted on: {{correctPost.dateofpost}}</h5>
                    <p> {{DateDistance}} </p>
                </div>
            </div>
            <div class="postinfocontainer">
                <h4> {{correctPost.postheader}} </h4>
                <p> {{correctPost.postcontent}} </p>
                <div class="postpicturecontent">
                {{#if correctPost.postpicturecontent}}
                    <img src="{{correctPost.postpicturecontent}}"/>
                {{else}}
                    <span></span>
                {{/if}}
    </div>
                <div class="footer">
                    <div class="upbit">
                        <img src="/static/img/up-arrow-regular-24.png"/>
                    </div>
                    <div class="downbit">
                        <img src="/static/img/down-arrow-regular-24.png"/>
                    </div>
                    <div class="share">
                        <img src="/static/img/share-regular-24.png"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="replyinputarea"> 
            <div class="replyinputbox">
                <form action="/submitreply/{{id}}" method="POST"> 
                <input type="text" id="replytextcontent" name="replytextcontent" placeholder="Reply to this post..."/> 
            </div>
            <div class="replybutton"><button type="submit" value="submit"> Reply </button> </div>
           
            </form>
            
        </div>
        </div>
        
        
        {{#if correctPost.replies}}
            {{#each correctPost.replies}}
                    {{> postreply}}
            {{/each}}
        {{else}}
            
            <div class="replybox"> 
                    <h4 style="text-align: center">Wow such empty</h4>
            </div>
        {{/if}}
    </div>
</div>
</body>

</html>