<!DOCTYPE HTML>
<html>
<head>
    <title> {{Title}} </title>
    <link rel="stylesheet" type="text/css" href="../public/css/viewpost.css" />
    <script src="../public/js/posts.js" defer></script>
</head>

<body>
    <div class="homecontainer">
        <div class = "webheader">
            <div class = "headercontent">
                <div class="headerhome">
                    <div class="websitelogo">
                        <a href="./main.html"><img src="../public/img/byte_logo.png"/></a>
                        <span class = "link"> <a style = "color: beige; text-decoration: none" href = "./main.html"> byte. </a> </span>
                    </div>
                </div>
                <div class="headersearchbar">
                    <input type="search" class="searchbar" placeholder="Search byte"/>
                </div>
                <div class="headerprofile">
                    <div class="profile">
                        <div class="profileicon">
                            <div class="profileiconholder">
                                <a href="{{CurrUserProfileLink}}">
                                <img src="{{UserProfileImgDir}}"/>
                                </a>
                            </div>
                        </div>
                        <div class="profilecontainer">
                            <div class="profiledisplayname">
                                <span>{{username}}</span>
                            </div>
                            <div class="profilehandlename">
                                <span>{{userhandle}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="topbuttons">
                        <a href="./main_not_logged.html"> Log out </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="mainpage"> 
            <div class="postcontainer">
                <div class="userinfo">
                    <div class="postcommunity"> 
                        <h5> {{community}} </h5>
                    </div>
                    <div class ="userpfp">
                        <a href="{{PosterProfileLink}}"> <img class="userimg" src="{{PosterPfpDir}}"> </a>
                    </div>
                <div class="postuserinfo"> 
                    <p> {{username}} <br><span>{{userhandle}}</span><br> Bits: {{PosterBits}}</p>
                </div>
                <div class="postdate"> 
                    <h5> Posted on: {{dateofpost}}</h5>
                    <p> {{DateDistance}} </p>
                </div>
            </div>
            <div class="postinfocontainer">
                <h4> {{postheader}} </h4>
                <p> {{postcontent}} </p>
                <div class="footer">
                    <div class="upbit">
                        <img src="../public/img/up-arrow-regular-24.png"/>
                    </div>
                    <div class="downbit">
                        <img src="../public/img/down-arrow-regular-24.png"/>
                    </div>
                    <div class="share">
                        <img src="../public/img/share-regular-24.png"/>
                    </div>
                </div>
            </div>
        </div>

        <div class="replyinputarea"> 
            
            <div class="replyinputbox">
                <input type="text" id="replytextcontent" placeholder="Reply to this post..."/> 
                
            </div>
            <div class="replybutton"> <a href=""> Reply </a> </div>
        </div>
        </div>
        <div class="replycontainer"> 
            <div class="replybox">
                <div class = "replyinfo"> 
                    <div class="replypfp"> 
                        <a href="{{ReplierProfileLink}}"> <img class="userimg" src="{{ReplierPfpDir}}"> </a>
                    </div>
                    <p> {{ReplierUsername}} <br><span> {{ReplierHandle}} </span><br> Bits: {{ReplierBits}}</p>
                    <div class="postdate"> 
                        <h5> Posted on: {{ReplyDate}} </h5>
                        <p> {{ReplyDateDistance}} </p>
                    </div>
                </div>
                
                
                <div class="replycontent"> 
                    <p> {{ReplyContent}} <br> </p>
                    <div class="replybutton"> <a href=""> Reply </a></div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>

</html>