<!DOCTYPE HTML>
<html>
<head>
    <title> {{returnedPost.postheader}} </title>
    <link rel="stylesheet" type="text/css" href="../public/css/viewpost.css" />
    <script src="../public/js/posts.js" defer></script>
</head>

<body>
    <div class="homecontainer">
        <div class = "webheader">
            <div class = "headercontent">
                <div class="headerhome">
                    <div class="websitelogo">
                        <a href="../mainpage"><img src="../public/img/byte_logo.png"/></a>
                        <span class = "link"> <a style = "color: beige; text-decoration: none" href = "../mainpage"> byte. </a> </span>
                    </div>
                </div>
                <div class="headersearchbar">
                    <input type="search" class="searchbar" placeholder="Search byte"/>
                </div>
                <div class="headerprofile">
                    <div class="profile">
                        <div class="profileicon">
                            <div class="profileiconholder">
                                <a href="{{userPosted.userprofilelink}}">
                                <img src="{{userPosted.pfplink}}"/>
                                </a>
                            </div>
                        </div>
                        <div class="profilecontainer">
                            <div class="profiledisplayname">
                                <span>{{userPosted.username}}</span>
                            </div>
                            <div class="profilehandlename">
                                <span>{{userPosted.userhandle}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="topbuttons">
                        <a href="/mainpage"> Log out </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="mainpage"> 
            <div class="postcontainer">
                <div class="userinfo">
                    <div class="postcommunity"> 
                        <h5> {{returnedPost.community}} </h5>
                    </div>
                    <div class ="userpfp">
                        <a href="{{userPosted.userprofilelink}}"> <img class="userimg" src="{{userPosted.pfplink}}"> </a>
                    </div>
                <div class="postuserinfo"> 
                    <p> {{userPosted.username}} <br><span>{{userPosted.userhandle}}</span><br> Bits: {{userPosted.bits}}</p>
                </div>
                <div class="postdate"> 
                    <h5> Posted on: {{returnedPost.dateofpost}}</h5>
                    <p> {{DateDistance}} </p>
                </div>
            </div>
            <div class="postinfocontainer">
                <h4> {{returnedPost.postheader}} </h4>
                <p> {{returnedPost.postcontent}} </p>
                <div class="postpicturecontent">
                {{#if returnedPost.postpicturecontent}}
                    <img src="{{returnedPost.postpicturecontent}}"/>
                {{else}}
                    <span></span>
                {{/if}}
    </div>
                <div class="footer">
                    <div class="upbit">
                        <img src="../public/img/up-arrow-regular-24.png"/>
                    </div>
                    <div class="downbit">
                        <img src="../public/img/down-arrow-regular-24.png"/>
                    </div>
                    <div class="share">
                        <img src="../public/img/share-regular-24.png"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="replyinputarea"> 
            <div class="replyinputbox">
                <form action="/submitreply" method="POST"> 
                <input type="text" id="replytextcontent" name="replytextcontent" placeholder="Reply to this post..."/> 
            </div>
            <div class="replybutton"><button type="submit" value="submit"> Reply </button> </div>
            </form>
        </div>
        </div>
        {{#if reply}}
            {{#each reply}}
                    {{> postreply}}
            {{/each}}
        {{else}}
            
            <div class="replybox"> 
                    <h4 style="text-align: center">Wow such empty</h4>
            </div>
        {{/if}}
    </div>
</div>
</body>

</html>