<!DOCTYPE HTML>
<html>
<head>
    <title> {{Title}} </title>
    <link rel="stylesheet" type="text/css" href="/public/css/viewpost.css" />
</head>

<body>
    <div class="homecontainer">
        <div class = "webheader">
            <div class = "headercontent">
                <div class="headerhome">
                    <div class="websitelogo">
                        <a href="./main.html"><img src="/public/img/byte_logo.png"/></a>
                        <span class = "link"> <a style = "color: beige; text-decoration: none" href = "./main.html"> byte. </a> </span>
                    </div>
                </div>
                <div class="headersearchbar">
                    <input type="search" class="searchbar" placeholder="Search byte"/>
                </div>
                <div class="headerprofile">
                    <div class="profile">
                        <div class="profileicon">
                            <div class="profileiconholder">
                                <a href="./profilepage2.html">
                                <img src="/public/img/pfp.jpg"/>
                                </a>
                            </div>
                        </div>
                        <div class="profilecontainer">
                            <div class="profiledisplayname">
                                <span>{{nick}}</span>
                            </div>
                            <div class="profilehandlename">
                                <span>{{userhandle}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="topbuttons">
                        <a href="./main_not_logged.html"> Log out </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="mainpage"> 
            <div class="postcontainer">
                <div class="userinfo">
                    <div class="postcommunity"> 
                        <h5> {{community}} </h5>
                    </div>
                    <div class ="userpfp">
                        <a href="./profilepage1.html"> <img class="userimg" src="/public/img/AYAKA.jpg"> </a>
                    </div>
                <div class="postuserinfo"> 
                    <p> {{PosterName}} <br><span>{{PosterHandle}}</span><br> Bits: {{PosterBits}}</p>
                </div>
                <div class="postdate"> 
                    <h5> Posted on: {{DateString}}</h5>
                    <p> {{DateDistance}} ago </p>
                </div>
            </div>
            <div class="postinfocontainer">
                <h4> {{PostTitle}} </h4>
                <p> {{PostContent}} </p>
                <div class="replybutton"> <a href=""> Reply </a> </div>
            </div>
        </div>

        <div class="replycontainer"> 
            <div class="replybox">
                <div class = "replyinfo"> 
                    <div class="replypfp"> 
                        <a href="./profilepage2.html"> <img class="userimg" src="/public/img/pfp.jpg"> </a>
                    </div>
                    <p> {{ReplyUsername}} <br><span> {{ReplyHandle}} </span><br> Bits: {{ReplyBits}}</p>
                    <div class="postdate"> 
                        <h5> Posted on: {{ReplyDate}} </h5>
                        <p> {{ReplyDateDistance}} ago </p>
                    </div>
                </div>
                
                
                <div class="replycontent"> 
                    <p> {{ReplyContent}} <br> </p>
                    <div class="replybutton"> <a href=""> Reply </a></div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>

</html>