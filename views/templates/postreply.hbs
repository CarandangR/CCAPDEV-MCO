<div class="replycontainer"> 
            <div class="replybox">
                <div class = "replyinfo"> 
                    <div class="replypfp"> 
                        <a href="{{user.userhandlelink}}"> <img class="userimg" src="{{user.pfplink}}"> </a>
                    </div>
                    <p> {{user.username}} <br><span> {{user.userhandle}} </span><br> Bits: {{user.bits}}</p>
                    <div class="postdate"> 
                        <h5> Posted on: {{replydate}} </h5>
                        <p> {{ReplyDateDistance}} </p>
                    </div>
                </div>
                
                
                <div class="replycontent"> 
                    <p> {{replycontent}} <br> </p>
                    <div class="footer">
                    <div class="upbit">
                        <img src="/static/img/up-arrow-regular-24.png"/>
                    </div>
                    <div class="downbit">
                        <img src="/static/img/down-arrow-regular-24.png"/>
                    </div>
                    <div class="share">
                        <img src="/static/img/share-regular-24.png"/>
                    </div>
                    <div class="replybutton"><a href=""> Reply </a></div>
                </div>
                </div>
            </div>
        </div>